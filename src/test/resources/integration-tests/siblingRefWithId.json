{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://example.org/SiblingRef",
  "properties": {
    "A": {
      "$id": "AwesomeSchema",
      "properties": {
        "name": {"type": "string"},
        "index": {"type": "integer" }
      },
      "required": ["name", "index"]
    },
    "B": {
      "$ref": "#/properties/A"
    }
  },
  "required": ["A","B"]
}